    <![endif]-->
  </head>
  <body>
    <!-- Fixed navbar -->
    <div class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <a href="/{{site.url-prefix}}/{{site.locale-url-prefix}}/"><img src="/{{site.url-prefix}}/img/petajakarta.png" width="252" height="45" alt=""/></a>
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="collapse navbar-collapse navbar-ex1-collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><a href="/{{site.url-prefix}}/{{site.locale-url-prefix}}/">{{{navbar.home}}}</a></li>
            <li><a href="/{{site.url-prefix}}/{{site.locale-url-prefix}}/map">{{{navbar.map}}}</a></li>
            <li class="active"><a href="/{{site.url-prefix}}/{{site.locale-url-prefix}}/data">Data</a></li>
            <li><a href="/{{site.url-prefix}}/{{site.other-locale-url-prefix}}/data">[{{{navbar.other-locale}}}]</a></li>
          </ul>
        </div>
      </div>
    </div>

    <div class="container top-navbar-padding">

        <h1>{{data.title}}</h1>
        <p class="lead">{{{data.lead}}}</p>
          <h3>{{data.available}}</h3>
          <table class="table table-responsive table-hover">
          <thead>
            {{#each data.tblData}}
            <tr>
              <th>{{hName}}</th>
              <th>{{hDescription}}</th>
              <th>{{hType}}</th>
            </tr>
          </thead>
          <tbody>
              {{#each fields}}
              <tr>
                <td><a href="{{url}}">{{name}}</a></td>
                <td>{{description}}</td>
                <td>{{type}}</td>
              </tr>
              {{/each}}
          </tbody>
          {{/each}}
        </table>

        <h3>{{data.privacy.title}}</h3>
        <p class="lead">{{data.privacy.text}}</p>

        <h3>{{data.licensing.title}}</h3>
          <p class="lead">{{{data.licensing.text}}}</p>
          <p class="lead"><a rel="license" href="http://creativecommons.org/licenses/by-nc/4.0/"><img alt="Creative Commons License" style="border-width:0" src="https://i.creativecommons.org/l/by-nc/4.0/88x31.png" /></a></p>

        <h3>{{data.api.title}}</h3>
          <p class="lead">{{data.api.text}}<a href="/{{site.url-prefix}}/{{site.locale-url-prefix}}/data/api">http://petajakarta.org/{{site.url-prefix}}/{{site.locale-url-prefix}}/data/api</a></p>

        <h3>{{data.partners.title}}</h3>
          <p class="lead">{{{data.partners.text}}}</p>
          <img src="/{{site.url-prefix}}/img/ands.jpg" width="200" height="96" alt=""/>

        <h3><a name="contact"></a>{{data.contact.title}}</h3>
          <p>{{data.contact.text}}</p>
          <p class="lead">Email: <a href="mailto:info@petajakarta.org">info@petajakarta.org</a><BR>Twitter:
          <a href="https://twitter.com/petajkt" target="_blank">@petajkt</a>
          </p>

    </div>

    <!-- Page footer -->
    <div class="container" id="page-foot">
      <hr>
      <div class="row centered">
        <p class="centered">PetaJakarta.org &copy; 2014 SMART Infrastructure Facility, University of Wollongong</p>
      </div>
    </div>

    <!-- Site JavaScript -->
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="/{{site.url-prefix}}/js/application.min.js"></script>

